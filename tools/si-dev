#!/usr/bin/env bash
set -euo pipefail

SOURCE="${BASH_SOURCE[0]}"
while [[ -h "${SOURCE}" ]]; do
  DIR="$(cd -P "$(dirname "${SOURCE}")" && pwd)"
  SOURCE="$(readlink "${SOURCE}")"
  [[ "${SOURCE}" != /* ]] && SOURCE="${DIR}/${SOURCE}"
done
ROOT="$(cd "$(dirname "${SOURCE}")/.." && pwd)"
BIN="${ROOT}/.artifacts/si"

needs_build=0
if [[ ! -x "${BIN}" ]]; then
  needs_build=1
else
  if find "${ROOT}/tools/si" "${ROOT}/agents/shared" -name '*.go' -newer "${BIN}" -print -quit | grep -q .; then
    needs_build=1
  fi
  if [[ "${ROOT}/tools/si/go.mod" -nt "${BIN}" || "${ROOT}/tools/si/go.sum" -nt "${BIN}" ]]; then
    needs_build=1
  fi
fi

if [[ ${needs_build} -eq 1 ]]; then
  mkdir -p "${ROOT}/.artifacts"
  (cd "${ROOT}/tools/si" && go build -o "${BIN}" .)
fi

exec "${BIN}" "$@"
